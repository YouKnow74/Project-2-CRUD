<h1>Edit Shop</h1>
<form method="post" action="/shop/updateS" enctype="multipart/form-data" class="col-6">
    <div>
       <label class="col-6 form-label">Name</label>
       <input type="text" name="name" value="<%=shop.name%>" class="col-6 form-control" />
    </div>
    <div>
      <label class="col-6 form-label">Email</label>
      <input name="email" type="email" value="<%=shop.email%>" class="col-6 form-control"  />
    </div>
    <div>
      <label>PhoneNumber</label>
      <input type="number" name="phoneNumber" value="<%=shop.phoneNumber%>" class="col-6 form-control" />
    </div>
    <div>
      <label>Address</label>
      <input type="text" name="address"  value="<%=shop.address %>" class="col-6 form-control" />
    </div>
    <!--product-->

    <div>
      <label class="col-6 form-label">Products <% shop.products.forEach((sh)=>{%>
        "<%=sh.name%>" 
        <%  }); %></label>
          <select name="products[]" class="col-6 form-select" multiple="multiple">
      <% prd.forEach(onePrd=>{%>
        <option value="<%= onePrd._id %>"><%= onePrd.name %></option>
     <% }) %>
      </select>
    </div>
    <div>
      <label class="col-6 form-label">Shop Image</label>
      <input type="file" name="image" class="col-6 form-image">
    </div>

    <input type="hidden" name="id" value="<%= shop._id%>" />


<button type="submit" class="col-6 form-control btn btn-secondary">Update Shop</button>

   </form>