<h1>Edit Shop</h1>
<form method="post" action="/shop/updateS">
    <div>
       <label>Name</label>
       <input type="text" name="name" value="<%=shop.name%>"/>
    </div>
    <div>
      <label>Email</label>
      <textarea   name="email" ><%=shop.email%></textarea>
    </div>
    <div>
      <label>PhoneNumber</label>
      <input type="number" name="phoneNumber" value="<%=shop.phoneNumber%>"/>
    </div>
    <div>
      <label>Address</label>
      <input type="text" name="address"  value="<%=shop.address %>"/>
    </div>
    <!--product-->

    <div>
      <% shop.products.forEach((sh)=>{%>
       "<%=sh.name%>"
      <%  }); %>
    </div>

    <input type="hidden" name="id" value="<%= shop._id%>" />


<button type="submit">Update Shop</button>

    
   </form>