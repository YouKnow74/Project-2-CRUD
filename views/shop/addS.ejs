
<h1>Add Shop</h1>
<form method="post" action="/shop/addS" enctype="multipart/form-data" class="col-6">
    <div>
       <label class="col-6 form-label">Name</label>
       <input type="text" name="name"  class="col-6 form-control" />
    </div>
    <div>
      <label class="col-6 form-label">Email</label>
      <input name="email" type="email"  class="col-6 form-control"  />
    </div>
    <div>
      <label>Phone Number</label>
      <input type="number" name="phoneNumber" class="col-6 form-control" />
    </div>
    <div>
      <label>Address</label>
      <input type="text" name="address"   class="col-6 form-control" />
    </div>
    <!--product-->

    <div>
      <label class="col-6 form-label">Products</label>
      <select name="products[]" class="col-6 form-select" multiple="multiple">
        <% prd.forEach((sh)=>{%>
       <option value="<%= sh._id %>">   "<%=sh.name%>" </option>
         <%  }); %>
      </select>
    </div>

    <div style="margin: 20px;">
      <label class="col-6 form-label">Shop Image</label>
      <input type="file" name="image" class="col-6 form-image">
    </div>


<button type="submit" class="col-6 form-control btn btn-secondary">Add Shop</button>

   </form>