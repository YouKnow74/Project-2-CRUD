<div>
    <!-- <h5>Product</h5> -->
    <div class="album py-5 bg-body-tertiary">
      <h2 style="text-align: center;">All Users</h2>
      <br>
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% alluser.forEach(aU => { %>
             
                <div class="col">
                  <div class="card shadow-sm">
                    <img  class="bd-placeholder-img card-img-top"  width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false" src="<%= aU.avatar %>"  width="100%" height="100%" fill="#55595c" width="100%" height="100%" fill="#55595c" />
                    <div class="card-body justify-content-center">
                      <p class="card-text" >
                        <h6><%=aU.name%></h6>
                        <%=aU.email%><br>

                        User Authority:<%=aU.userType%>
                    </p>
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="/user/detailU?id=<%= aU._id %>">
                          <button  class="btn btn-sm btn-outline-secondary">View</button>
                        </a>
                    
                        <a href="/user/editU?id=<%= aU._id %>">
                          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        </a>
                    
                      
                            <a href="/user/deleteU?id=<%= aU._id %>">
                                <button type="button" class="btn btn-sm btn-outline-secondary"><i class="fa fa-trash-o"></i></button>
                              </a>
                         
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              
        
<%  });  %>
</div>
</div>
</div>
</div>