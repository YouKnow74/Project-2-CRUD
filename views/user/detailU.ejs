

<div style="display: flex; justify-content: center;"class="album py-5 bg-body-tertiary">
<div class="col-lg-4 col-md-8 col-sm-12">
  <div><h2 style="text-align: center;">User: <%= Suser.name %></h2></div>
  <br>
    <div class="card shadow-sm">
      <img class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false" src="<%= Suser.avatar %>" width="100%" height="100%" fill="#55595c" width="100%" height="100%" fill="#55595c" />
      <div class="card-body">
        <p class="card-text">
                <h6><%= Suser.name%></h6>
                <%= Suser.email%>
                <%= Suser.userType%>

      </p>
      <% if(userType=="Admin"){ %>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
          <a href="/user/editU?id=<%= Suser._id %>">
            <button type="button" class="btn btn-sm btn-outline-secondary">Update</button>
          </a>
              <a href="/user/deleteU?id=<%= Suser._id %>">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><i class="fa fa-trash-o"></i></button>
                </a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>



