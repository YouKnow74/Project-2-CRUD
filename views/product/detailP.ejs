<h3><%= singleProduct.name %></h3>
<div class="col-lg-4 col-md-8 col-sm-12">
    <div class="card shadow-sm">
      <img class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"src="/images/<%= singleProduct.image %>" width="100%" height="100%" fill="#55595c" width="100%" height="100%" fill="#55595c" />
      <div class="card-body">
        <p class="card-text">Product: <%= singleProduct.name %><br>
          <h6 style="color: gray;"> Category: <%= singleProduct.category %></h6><br>
         Description:<br> <%= singleProduct.description %><br>
         Price:<br>  <%= singleProduct.price %>$<br>
         Quantity:<br><%= singleProduct.quantity %><br>
         Details:<br><%= singleProduct.details %>

      </p>
      <% if(userType=="Admin"){ %>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
          <a href="/product/editP?id=<%= singleProduct._id %>">
            <button type="button" class="btn btn-sm btn-outline-secondary">Update</button>
          </a>
              <a href="/product/deleteP?id=<%= singleProduct._id %>">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><i class="fa fa-trash-o"></i></button>
                </a>
            <% } %>
          </div>
          <small class="text-body-secondary"><%= dayjs(singleProduct.createdAt).fromNow(true)%></small>
        </div>
      </div>
    </div>
  </div>

