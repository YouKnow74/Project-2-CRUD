
<div>
    <!-- it should be float image-->
    <!-- <div>
        <img />
    </div> -->
    <div>
        <!-- <h5>Product</h5> -->
        <div class="album py-5 bg-body-tertiary">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% allProducts.forEach(aProducts => { %>
                 
                    <div class="col">
                      <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"src="/images/logo.png" width="100%" height="100%" fill="#55595c" width="100%" height="100%" fill="#55595c" />
                        <div class="card-body">
                          <p class="card-text"><%= aProducts.name %><br>
                            <h6 style="color: gray;">        <%= aProducts.category %></h6><br>
                           Description: <%= aProducts.description %><br>
                           Price:  <%= aProducts.price %>$<br>
                           Quantity:<%= aProducts.quantity %><br>
                           Details:<%= aProducts.details %>

                        </p>
                          <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/product/detailS?id=<%= aProducts._id %>">
                              <button type="button"  class="btn btn-sm btn-outline-secondary">View</button>
                            </a>
                            <a href="/product/editP?id=<%= aProducts._id %>">
                              <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </a>
                            <a href="/cart/addC?id=<%= aProducts._id %>">
                              <button type="button" class="btn btn-sm btn-outline-secondary">Add to Cart</button>
                            </a>
                            <% if (user){ %>
                                <a href="/product/editP?id=<%= aProducts._id %>">
                                    <button type="button" class="btn btn-sm btn-outline-secondary"><i class="fa fa-trash-o"></i></button>
                                  </a>
                                  <% } %>
                            </div>
                            <small class="text-body-secondary">9 mins</small>
                          </div>
                        </div>
                      </div>
                    </div>
                  
            
    <%  });  %>
</div>
</div>
</div>
</div>