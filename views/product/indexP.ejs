<div>
        <!-- <h5>Product</h5> -->
        <div class="album py-5 bg-body-tertiary">
          <h3>View All Products</h3>
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% allProducts.forEach(aProducts => { %>
                 
                    <div class="col">
                      <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"src="/images/<%= aProducts.image %>" width="100%" height="100%" fill="#55595c" width="100%" height="100%" fill="#55595c" />
                        <div class="card-body">
                          <p class="card-text">Product Name: <br><%= aProducts.name %><br>
                            <h6 style="color: gray;">Category: <br><%= aProducts.category %></h6><br>
                           Description: <br> <%= aProducts.description %><br>
                           Price: <br>  <%= aProducts.price %>$<br>
                           Quantity: <br><%= aProducts.quantity %><br>
                           Details: <br><%= aProducts.details %>

                        </p>
                          <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/product/detailP?id=<%= aProducts._id %>">
                              <button  class="btn btn-sm btn-outline-secondary">View</button>
                            </a>
                            <% if (userType=="Admin"){ %>
                            <a href="/product/editP?id=<%= aProducts._id %>">
                              <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </a>
                            <% } %>
                            <% if (user){ %>
                            <a href="/cart/addC?id=<%= aProducts._id %>">
                              <button type="button" class="btn btn-sm btn-outline-secondary">Add to Cart</button>
                            </a>
                            <% } %>
                            <% if (userType=="Admin"){ %>
                                <a href="/product/deleteP?id=<%= aProducts._id %>">
                                    <button type="button" class="btn btn-sm btn-outline-secondary"><i class="fa fa-trash-o"></i></button>
                                  </a>
                                  <% } %>
                            </div>
                            <small class="text-body-secondary"><%= dayjs(aProducts.createdAt).fromNow(true) %> ago</small>
                          </div>
                        </div>
                      </div>
                    </div>
                  
            
    <%  });  %>
</div>
</div>
</div>
</div>