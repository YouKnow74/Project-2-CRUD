<h4>Cart</h4>

<table class="table table-dark table-striped-columns" style="text-align: center;">
<tr>
    <th>Product Image</th>
    <th>Product Name</th>
    <th>Product Price</th>
    <th>Product Category</th>
    <th>Product Description</th>
    <th>Product Details</th>
    <th>Remove</th>
</tr>


<% let totalPrice=0; cart.products.forEach((product)  => { %>
    
    <% totalPrice+=product.price %>
<tr>
            <td><img src="/images/<%= product.image %>" style="width: 40px;height: 40px;"></td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.category %></td>
            <td><%= product.description %></td>
            <td><%= product.details %></td>

        <td> <a href="/cart/deleteC?id=<%=product._id%>"><i class="fa fa-trash-o"></i></a></td>
</tr>
